1-part

1-task
import math
a = int(input("Value of a: \n"))
b = int(input("Value of b: \n"))
h = int(input("Value of h: \n"))
S = ((math.sqrt(a) + b) * h) / (2*(a-b) + 4)
print("Answer: S = " + format(S))

2-task
import math

x = int(input("Value of x: \n"))
y = int(input("Value of y: \n"))

H = math.sqrt(math.cos(2 * y) + math.sin(4 * y) + math.sqrt(math.exp(x) + math.exp(-x))) / math.pow((math.exp(x) + math.exp(-x)), 3) * math.pow((math.sin(4 * y) + math.cos(2 * y) - 2), 2)

print('H = ', H)

3-task
import math
x = 2
y = 1
A = math.pow(math.pow(x, y), x) + math.pow(x, math.pow(x, y)) - math.pow(x, 4)
print("Answer is: " + format(A))

4-task
import math
x = 1
y = 4
z = 3
A = math.pow(4, x * y) - math.pow(x, y * z) + math.pow(x * y, z)
print("Answer is: " + format(A))

5-task
import math
x = 3
y = 0.2
A = (5 * x * y / math.pow(x, 3) - 4) + math.exp(math.pow(x, 2)) + math.sqrt(math.pow(math.cos(y), 2)) - math.pow(y, 2)
print("Answer is: " + format(A))

6-task
import math
x = 3
y = 5
A = (math.sqrt(math.fabs(y))) + (math.pow(math.atan(math.log1p(x)), 3)) / (math.pow(x, y) - y + 1)
print("Answer is: " + format(A))

